                    </div>
                </div>
                </div>
                
            </div>
            *}
        {/foreach}
    </div>
    <div class="row">
        <div class="col-md-8 col-md-offset-2 text-center">
            {include paginator}
        </div>
    </div>
</div>
{/block}
