                    {!$personality->description}
                </div>
                <div class="col-md-3 text-right">
                    <img src="{$personality->image}" alt="{$personality->name}">
                </div>
                
            <div class="col-md-12">
                <div class="media">
                    <div class="media-body">
                        <h2><a n:href="Personality:personality $personality->seokey">{$personality->name}</a></h2>
